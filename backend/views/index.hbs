<section class="banner-display">
  <video width="100%" class="banner-display__video" autoplay loop muted controls>
	<source src="videos/afreen.mp4" type="video/mp4">
	Your browser does not support HTML5 video.
  </video>
</section>
<section class="service-form-container">
  <div class="service-form-wrapper">
    <div class="service-form"> 
      <h2 class="service-form__title">Catalog</h2>
      <p class="service-form__category">Choose a category</p>
      <select name="category" class="service-form__category__select">
      <option value="">Select a category</option>
        <option value="volvo">Home Appliances</option>
        <option value="saab">Mobiles and Laptops</option>
        <option value="fiat">Automobiles</option>
        <option value="audi">Plumbing</option>
        <option value="audi">Furniture</option>
      </select>
      <br>
      <p class="service-form__product">Choose a Product</p>
      <select name="product" class="service-form__product__select">
        <option value="">Select a product</option>
        <option value="volvo">Home Appliances</option>
        <option value="saab">Mobiles and Laptops</option>
        <option value="fiat">Automobiles</option>
        <option value="audi">Plumbing</option>
        <option value="audi">Furniture</option>
      </select>
      <div class="service-form__nav">
       <div class="service-form__nav__view-cart btn">View Cart</div>
       <div class="service-form__nav__next btn">Next</div>
      </div>
    </div>
    <div class="service-form"> 
      <h2 class="service-form__title">Product Details</h2>
      <p class="service-form__category">If all the products are same</p>
      <input id="checkBox" type="checkbox">
      <br>
      <div class="selected-product">
        <span class="selected-product__name">Name</span>
        <input class="selected-product__quantity" type="Number" name="quantity" placeholder="Quantity" min="1" max="1000" />
        <input class="selected-product__price" type="Number" name="price" placeholder="Price of purchase" min="1" max="50000000"/>
        <input class="selected-product__year" type="Number" name="year" placeholder="Year of purchase"/>
        <span class="selected-product__premium">Premium</span>
      </div>
      <div class="service-form__nav">
        <div class="service-form__nav__back btn">Back</div>
        <div class="service-form__nav__cal-premium btn">Calculate Premium</div>
       <div class="service-form__nav__add-to-cart btn">Add to cart</div>
      </div>
    </div>
  </div>
</section>	
